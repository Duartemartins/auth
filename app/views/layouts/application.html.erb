<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

<!-- <%= render_navigation renderer: :links, join_with: '| ' %> -->

  	<% if current_user %>
      <%= "Logged in as #{current_user.email}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Home', root_path %> | <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>
<div>
  <p style="color:red;">
        <% if notice %>
      <%= notice %>
    <% end %>
  
  <% if alert %>
      <%= alert %>
    <% end %>
  </p>
</div>
        <%= yield %>



  </body>
</html>